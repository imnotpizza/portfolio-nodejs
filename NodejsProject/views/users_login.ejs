        <title>PetDeal-쉽고 빠른 애완동물 장터</title>
</head>

<body>

    <% include ./header %>


    <div class="container">
            <div class="row">
              <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                  <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" action='/users/login' method='post'>
                      <div class="form-label-group">
                        <label for="inputEmail">아이디</label>
                        <input type="text" id="inputEmail" name='id' class="form-control" placeholder="아이디 입력" required autofocus>
                        
                      </div>
        
                      <div class="form-label-group">
                        <label for="inputPassword">비밀번호</label>
                        <input type="password" id="inputPassword" name='password' class="form-control" placeholder="비밀번호 입력" required>
                        
                      </div>
                      <br><br>
                      <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="customCheck1" name='useCookie'>
                        <label class="custom-control-label" for="customCheck1">Remember password</label>
                      </div>
                      <br><br>
                      <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                      <hr class="my-4">
                     
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>


    
    <% include ./footer %>
</body>
</html>